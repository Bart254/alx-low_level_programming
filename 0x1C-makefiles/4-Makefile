SRC = school.c main.c
OBJ = school.o main.o
CC = gcc
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

school.o: school.c
	$(CC) $(CFLAGS) -c school.c

main.o: main.c
	$(CC) $(CFLAGS) -c main.c

clean:
	$(RM) -f *~
	$(RM) -f school

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all

